---
// Common layout component for all pages
import type { Translation } from '../i18n/translations';

interface Props {
  t: Translation;
}

const { t } = Astro.props;
---

<!doctype html>
<html lang={t.lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={t.description} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- link: https://fonts.google.com/specimen/Zen+Maru+Gothic -->
    <link
      href="https://fonts.googleapis.com/css2?family=Zen+Maru+Gothic:wght@400&display=swap"
      rel="stylesheet"
    />
    <title>{t.title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* CSS Reset and base styles */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  :root {
    --color-bg: #fafafa;
    --color-bg-alt: #f0f4f5;
    --color-bg-dark: #202020;
    --color-text: #1a1a1a;
    --color-text-light: #fafafa;
    --color-text-muted: #666;
    --color-accent: #2563eb;
    --color-border: #e5e5e5;
    --font-sans: 'Zen Maru Gothic', system-ui, -apple-system, BlinkMacSystemFont,
      'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    --font-mono: ui-monospace, SFMono-Regular, 'SF Mono', Menlo, Consolas,
      monospace;
    --section-padding: 8rem;
    --section-padding-mobile: 5rem;
  }

  html {
    font-family: var(--font-sans);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.8;
    font-size: 16px;
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: opacity 0.2s;
  }

  a:hover {
    opacity: 0.7;
  }

  img {
    max-width: 100%;
    height: auto;
    display: block;
  }

  /* Section base styles for spacious layout */
  section {
    padding: var(--section-padding) 2rem;
  }

  @media (max-width: 768px) {
    section {
      padding: var(--section-padding-mobile) 1.5rem;
    }
  }
</style>
